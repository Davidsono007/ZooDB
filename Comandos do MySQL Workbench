# Você vai precisar criar um Banco de Dados Local que possua essas exatas tabelas
# Não esqueça de inicilizar o uma conexão com MySQL pelo painel de controle do Xampp

CREATE database ZooV2;
USE ZooV2;

CREATE TABLE  Especie (
	id_especie int auto_increment not null,
    nm_especie varchar(100) not null,
    ds_dieta varchar(50) not null,
    primary key (id_especie)
);

CREATE TABLE Cercado (
	id_cercado int auto_increment not null,
    nm_cercado varchar(100) not null,
    ds_tipo varchar(50) not null,
    primary key (id_cercado)
);

CREATE TABLE Animal (
	id_animal int auto_increment not null,
    nm_animal varchar(100) not null,
    ds_sexo char(1) not null,
    id_especie int,
    id_cercado int,
    primary key (id_animal),
    foreign key (id_especie) references Especie(id_especie),
    foreign key (id_cercado) references Cercado(id_cercado)
);

# Dados da tabela Especie
